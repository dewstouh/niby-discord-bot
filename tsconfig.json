{
   "compilerOptions": {
      "strict": true,
      "lib": [
         "ESNext"
      ],
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "rootDir": "./src",
      "outDir": "./dist",
      "importHelpers": true,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "noEmitOnError": true,
      "skipDefaultLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
   },
   "exclude": [
      "node_modules",
      "src/scripts",
      "dist"
   ],
   "compileOnSave": true
}